  title         = {{Orloj}: Predictably Serving Unpredictable {DNN}s},
  year          = {2022},
  month         = {Aug},
  volume        = {abs/2209.00159},
  archiveprefix = {arXiv},
  bibsource     = {dblp computer science bibliography, https://dblp.org},
