  author        = {Jang, Insu and Yang, Zhenning and Zhang, Zhen and Jin, Xin and Chowdhury, Mosharaf},
  journal       = {CoRR},
  title         = {Oobleck: Resilient Distributed Training of Large Models Using Pipeline Templates},
  year          = {2023},
